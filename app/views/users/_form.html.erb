<%= form_for(@user) do |f| %>
	<%=render :partial => "shared/error_messages", :locals=>{:object => @user}%>

  <table>
	<tr>
		<th><%= attr_name(:user, :name) %>:</th>
		<td><%= f.text_field :name %></td>
	</tr>
	<tr>
		<th><%= attr_name(:user, :password) %>:</th>
		<td><%= f.password_field :password %></td>
	</tr>
	<tr>
		<th><%= attr_name(:user, :password_confirmation) %>:</th>
		<td><%= f.password_field :password_confirmation%></td>
	</tr>
	<tr>
		<th></th>
		<td class="submit">
			<%= f.submit "登録", :class=> "submit"%>
		</td>
	</tr>
</table>
<% end %>
