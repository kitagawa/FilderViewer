<%= form_for(@user) do |f| %>
		<label><%= attr_name(:user, :name) %></label>
		<%= f.text_field :name %>
		<label><%= attr_name(:user, :password) %></label>
		<%= f.password_field :password %>
		<label><%= attr_name(:user, :password_confirmation) %></label>
		<%= f.password_field :password_confirmation%>
		<p class="submit">
			<%= f.submit "登録", :class=> "btn btn-large"%>
			<%=link_to "キャンセル", login_index_path, {:class => 'btn btn-large'}%>
		</p>
<% end %>
