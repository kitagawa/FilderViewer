<%=render :partial => "shared/simple_error_message"%>

<canvas id="main" width="500", height="500">
	<script>
		Canvas.draw_background();
	</script>
	<%if @json%>
		<script>
			new Canvas(parse_json('<%=escape_javascript(@json)%>')).draw();
		</script>
	<%end%>
</canvas>

<div>
	<%=link_to "Draw", draw_canvas_path, :remote=> true%>
</div>


